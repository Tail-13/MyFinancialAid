generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String
  password String
}

model AccountType {
  id Int @id @default(autoincrement())
  name String
  description String?
  deleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
}

model Account {
  id Int @id @default(autoincrement())
  accountTypeId Int
  userId Int
  name String
  description String?
  deleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
}

model TransactionHeader {
  id Int @id @default(autoincrement())
  description String
  date DateTime
  deleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
}

enum TransactionType {
  debit
  credit
}

model TransactionDetail {
  id Int @id @default(autoincrement())
  transactionType TransactionType
  accountId Int
  amount Float
  deleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime?
  deletedAt DateTime?
}